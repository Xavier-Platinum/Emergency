                        <h1 class="text-center col-sm-8 mx-5">User Registration Board</h1>
                        <div class="tab-content" id="myTabContent">
                            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                                <h3 class="register-heading">Register Here</h3>
                                <form action="/register" method="POST" class="row register-form">
                                    <div class="col-md-6">
                                      <div class="input-group form-group">
                                          <div class="input-group-prepend">
																						<span class="input-group-text"><i class="fa fa-user"></i></span>
																					</div>
                                            <input type="text" class="form-control form-control-line" name="fName" placeholder="First Name *" value="" />
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                      <div class="input-group form-group">
                                          <div class="input-group-prepend">
																						<span class="input-group-text"><i class="fa fa-user"></i></span>
																					</div>
                                            <input type="text" name="lName" class="form-control form-control-line" placeholder="Last Name *" value="" />
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                      <div class="input-group form-group">
																					<div class="input-group-prepend">
																						<span class="input-group-text"><i class="fa fa-envelope"></i></span>
																					</div>
																					<input type="email" name="email" class="form-control form-control-line" placeholder="Your Email *" value="" />
																				</div>
                                    </div>
                                    <div class="col-md-6">
                                      <div class="input-group form-group">
                                          <div class="input-group-prepend">
																						<span class="input-group-text"><i class="fa fa-phone-square"></i></span>
																					</div>
                                            <input type="tel" minlength="10" maxlength="11" name="phone" class="form-control" placeholder="Your Phone *" value="" />
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                      <div class="input-group form-group">
                                          <div class="input-group-prepend">
																						<span class="input-group-text"><i class="fa fa-location-arrow"></i></span>
																					</div>
                                          <input type="text" class="form-control form-control-line" name="address" placeholder="Enter Your Address *" value="">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="input-group form-group">
                                          <div class="input-group-prepend">
																						<span class="input-group-text"><i class="fa fa-lock"></i></span>
																					</div>
                                            <input type="password" name="password1" class="form-control form-control-line" placeholder="Password *" value="" />
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="input-group form-group">
                                          <div class="input-group-prepend">
																						<span class="input-group-text"><i class="fa fa-lock"></i></span>
																					</div>
                                            <input type="password" name="password2" class="form-control form-control-line"  placeholder="Confirm Password *" value="" />
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <input type="submit" class="btnRegister"  value="Register"/>
                                    </div>
                                </form>
                            </div>
                        </div>
